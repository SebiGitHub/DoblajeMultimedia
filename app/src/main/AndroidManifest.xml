<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permiso para grabar audio mediante el micrófono del dispositivo -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Permiso para escribir en el almacenamiento externo (guardar archivos) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Permiso para leer archivos almacenados en el almacenamiento externo -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Permiso para usar la camara, no es obligatorio -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />




    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DobalejeMultimedia"
        tools:targetApi="31">


        <!-- Declaro un FileProvider que sirve para compartir archivos de forma segura con otras apps -->
        <!-- Define el identificador único (authority) que usaremos en el código -->
        <!-- Evita que el FileProvider sea accesible directamente por otras apps sin permisos adecuados -->
        <!-- Permite conceder permisos temporales para acceder a los archivos compartidos -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">

            <!-- Configura la ruta de archivos que se podrán compartir, usando el archivo res/xml/file_paths.xml -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>


        <activity
            android:name=".RecordingActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>